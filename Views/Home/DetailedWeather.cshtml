@model Root

@{
    int id = (int)ViewData["id"];
    var dayOfTheWeek = ViewData["date"];
}

<div class="row text-center justify-content-center pt-5">

    <div class="col-lg-3 col-sm-12 mt-5">
        <h1>Weather for @Model.city_name</h1>
        <p>@Model.data[id].datetime</p>
        <p>@dayOfTheWeek</p>
        <img src="/@Model.imgName[id]">
        <p>Wind speed: @Model.data[id].wind_spd m/s</p>
        <p>Average Temperature: @Model.data[id].temp</p>
        <p>Probability of Precipitation: @Model.data[id].pop</p>
        <p>Sunrise time: @Model.data[id].sunrise_ts</p>
        <p>Sunset time: @Model.data[id].sunset_ts</p>
        <a class="btn btn-outline-dark" asp-action="Back" asp-controller="Home">Back</a>
    </div>
</div>
