@model RegisterModel

<div class="d-flex justify-content-center align-items-center mt-5">

    <div asp-validation-summary="All">
        <h1>REGISTRATION</h1>
        <form asp-action="Register" asp-controller="Account" method="post">

            <label asp-for="Name" class="mb-3">Name:</label>
            <input type="text" asp-for="Name" /><br />

            <label asp-for="Surname" class="mb-3">Surname:</label>
            <input type="text" asp-for="Surname" /><br />

            <label asp-for="Email" class="mb-3">Email:</label>
            <input type="email" asp-for="Email" /><br />

            <label asp-for="Password" class="mb-3">Password:</label>
            <input type="password" asp-for="Password" /><br />

            <label asp-for="RepeatPassword" class="mb-3">Repeat pass:</label>
            <input type="password" asp-for="RepeatPassword" /><br />

            <button class="button" type="submit">Submit</button>
        </form>
    </div>
</div>